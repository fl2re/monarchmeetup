<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="emerald411.com.monarchmeetup.UserActivity">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USERNAME HERE"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsername"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        android:text="3"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvPointsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPoints"
        android:text="Total Points"
        android:textSize="16sp"
        android:gravity="center"/>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvPointsLabel" />

    <TextView
        android:id="@+id/tvCreatedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_toLeftOf="@+id/divider"
        android:text="2"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"/>

    <TextView
        android:id="@+id/tvCreatedCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCreatedCount"
        android:text="Created Events"
        android:textSize="16sp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/divider"/>

    <TextView
        android:id="@+id/tvAttendedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_toRightOf="@+id/divider"
        android:text="1"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/tvAttendedCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCreatedCount"
        android:text="Attended Events"
        android:textSize="16sp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/divider"/>

    <View
        android:id="@+id/hDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvAttendedCountLabel"
        android:layout_marginTop="20dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/tvUserDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hDivider"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="This is your description of yourself. Click here to edit. In later updates users will be able to view your profile."/>

</RelativeLayout>
