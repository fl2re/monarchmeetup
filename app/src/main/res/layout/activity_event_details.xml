<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:text="Sign me up!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignUp"
        android:background="#F87060"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignParentBottom = "true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Enter Event Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPassword"
        android:background="#C87060"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/btnSignUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:id="@+id/activity_event_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="emerald411.com.monarchmeetup.EventDetailsActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eventName"
            android:textColor="#F87060"
            android:textSize="25sp"
            android:ems="10"
            android:layout_marginTop="19dp"
            android:id="@+id/eventName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:textColor="#F87060"
            android:textSize="20sp"
            android:id="@+id/time"
            android:layout_below="@+id/eventName"
            android:layout_alignLeft="@+id/eventName"
            android:layout_alignStart="@+id/eventName" />

        <TextView
            android:text="When"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F87060"
            android:textSize="20sp"
            android:layout_below="@+id/time"
            android:layout_alignLeft="@+id/time"
            android:layout_alignStart="@+id/time"
            android:layout_marginTop="54dp"
            android:id="@+id/when" />

        <TextView
            android:text="Where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F87060"
            android:textSize="20sp"
            android:id="@+id/textView4"
            android:layout_below="@+id/when"
            android:layout_alignLeft="@+id/when"
            android:layout_alignStart="@+id/when"
            android:layout_marginTop="50dp" />

        <TextView
            android:text="Attendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F87060"
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_above="@+id/when"
            android:layout_alignRight="@+id/eventName"
            android:layout_alignEnd="@+id/eventName" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVeventAttendees"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVeventTime"
            android:layout_below="@+id/time"
            android:layout_alignLeft="@+id/time"
            android:layout_alignStart="@+id/time" />

        <TextView
            android:text="Month day, year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVeventDate"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/when" />

        <TextView
            android:text="location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVeventLocation"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/TVeventLocation"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/textView3"
            android:layout_alignLeft="@+id/TVeventLocation" />

        <TextView
            android:text="details,details,details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:id="@+id/TVeventDetails" />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>